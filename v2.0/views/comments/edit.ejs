<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit the comment of <%=camp.name%></h1>
        <div id="form">
            <form action="/grounds/<%=camp._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="comment" value="<%=comment.text%>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
                
                <div class="form-group">
                    <a class="btn btn-default btn-lg btn-block" href="/grounds/<%=camp._id%>">back </a>
                </div>
            </form>
        </div>
    </div>
</div>
<%include ../partials/footer%>
