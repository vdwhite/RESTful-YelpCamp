<%include ../partials/header%>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit the campground <%=campground.name%></h1>
        <div id="form">
            <form action="/grounds/<%= campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="ground[name]" value=<%=campground.name%>>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image" name="ground[image]" value=<%=campground.image%>>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="ground[description]" value=<%=campground.description%>>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="price" name="ground[price]" min="0.00" step="0.01" value="<%=campground.price%>" />
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
                
                <div class="form-group">
                    <p><a class="btn btn-default btn-lg btn-block" href="/grounds/<%=campground._id%>">back </a></p>
                </div>
            </form>
        </div>
    </div>
</div>
<%include ../partials/footer%>
